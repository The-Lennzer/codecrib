{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",          // <-- change from node16 or esnext to commonjs
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": ["src/**/*.ts"],
  "files": ["types/index.d.ts", "types/express/index.d.ts"],
  "exclude": [
    "jest.config.ts",
    "**/*.test.ts"
  ]
}
